    <%= form_for([:admin, @category]) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      
      <%= f.label :description %>
      <%= f.text_area :description, col: 40, rows: 5 %>
      
      <%= f.submit yield(:button_text), class: "btn btn-primary" %>
    <% end %>